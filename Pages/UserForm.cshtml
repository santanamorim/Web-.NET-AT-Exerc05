@page
@model Web_.NET_AT_Exerc05.Pages.UserFormModel
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h2>Cadastro de Usuário</h2>

<form method="post">
    <div>
        <label for="Name">Nome:</label>
        <input asp-for="User.Name" id="Name" />
        <span asp-validation-for="User.Name" class="text-danger"></span>
    </div>
    <div>
        <label for="Email">E-mail:</label>
        <input asp-for="User.Email" id="Email" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>
    <div>
        <label for="BirthDate">Data de Nascimento:</label>
        <input asp-for="User.BirthDate" id="BirthDate" type="date" />
        <span asp-validation-for="User.BirthDate" class="text-danger"></span>
    </div>
    <button type="submit">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success">
        @Model.Message
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
